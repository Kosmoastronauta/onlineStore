<head>
    <link href="/css/button.css" rel="stylesheet" >
</head>

<form>
    <div class="form-group row">
        <label for="empty" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <label for="text" style="font-family: Times New Roman, Times, serif !important; font-size: 70px !important;"><%=product.name%></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="description" style="font-family: Times New Roman, Times, serif !important; font-size: 30px !important; color:seagreen; margin-left: 30px;">Description:</label>
        <div class="col-sm-10">
            <label for="text" style="font-family: Times New Roman, Times, serif !important; font-size: 30px !important;"><%=product.description%></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="price" style="font-family: Times New Roman, Times, serif !important; font-size: 30px !important; color:seagreen; margin-left: 30px;">price: $ <%=product.price%></label>
    </div>
</form>


<div class="container">
    <section class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">EditProduct</h3>
        </div>
        <div class="panel-body">
            <form class="box" action="/products/edit/<%=product.id%>" method="POST">
                <div class="form-group row green-border-focus">
                    <label for="name" class="col-sm-2 col-form-label">Product Name:</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="name" value="<%=product.name%>">
                    </div>
                </div>
                <div class="form-group row green-border-focus">
                    <label for="category" class="col-sm-2 col-form-label">Category:</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="category" value="<%=product.category%>">
                    </div>
                </div>

                <div class="form-group row green-border-focus">
                    <label for="price" class="col-sm-2 col-form-label">Price:</label>
                    <div class="col-sm-3">
                        <input type="number" class="form-control" name="price" value="<%=product.price%>" >
                    </div>
                </div>

                <div class="form-group green-border-focus">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="exampleFormControlTextarea5" name="description" rows="3"
                              placeholder="..."></textarea>
                </div>
                <fieldset class="form-group">

                </fieldset>
                <div class="form-group row">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
