<head>
    <link href="/css/list.css" rel="stylesheet" >
    <link href="/css/button.css" rel="stylesheet" >
</head>

<form method='GET' action="/findProduct">
    <div class="container">
        <div class="prompt left-pane">
            <span>Search Product by name</span>
        </div>
        <div class="right-pane">
            <input type="text" id="productName" name="productName" />
        </div>
    </div>
    <div class="submit-name">
        <input type="submit" value="Find" />
    </div>
    </div>
</form>

<form>
<div class="container mt-5">
    <div class="head">
        <button type="button" class="shopping-cart-button" data-toggle="shopping-cart-dropdown">
            <i class="fa fa-shopping-cart"></i>
            <span class="text">Go to Cart (0)</span></button>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="mt-3">
                <ul class="list list-inline">
                    <% for (var i = 0; i < products.length; i++) { %>
                        <li class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-left list-elem-to-left"><i class="fa fa-check-circle checkicon"></i>
                                <div class="ml-2">
                                    <h4 class="mb-0"><%= products[i].name %></h4>
                                    <div class="d-flex flex-row mt-1 text-black-50 date-time">
                                        <div class="ml-3"><i class="fa fa-clock-o"></i><span class="ml-2"><%= products[i].price%>$</span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="d-flex flex-column mr-2">
                                    <a href="/buyProduct/<%=products[i].id%>" class="btn-gradient">Details</a>
                                </div>
                                <div>
                                    <button type="button" class="shopping-cart-button float-right" data-toggle="shopping-cart-dropdown">
                                        <i class="fa fa-shopping-cart"></i>
                                        <span class="text">Add to Cart</span>
                                    </button>
                                </div>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>
