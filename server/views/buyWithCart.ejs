<head>
    <link href="/css/list.css" rel="stylesheet">
    <link href="/css/button.css" rel="stylesheet">
</head>
<div class="row">
    <div class="col-md-12">
        <div class="mt-3">
            <ul class="list list-inline">
                <% for (var i = 0; i < cart.products.length; i++) { %>
                    <li class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-left list-elem-to-left">
                            <div class="ml-2">
                                <h4 class="mb-0"><%= cart.products[i].name %></h4>
                                <div class="d-flex flex-row mt-1 text-black-50 date-time">
                                    <div class="ml-3"><i class="fa fa-clock-o"></i><span
                                                class="ml-2"><%= cart.products[i].price %>$</span></div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                        </div>
                    </li>
                <% } %>
            </ul>
            <p>Total price:<%=cart.totalPrice%></p>
            <form action = "/buyProductsWithCart" method="POST">
            <div class="d-flex flex-column mr-2">
                <button type="submit" class="btn-gradient">Buy</button>
            </div>
            </form>

        </div>
    </div>
</div>
